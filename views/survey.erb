<h1><%= @survey.name() %></h1>

<% if @survey.questions().any?() %>
	<h3>Here are all the questions in this survey:</h3>

	<ul>
		<% @survey.questions().each() do |question| %>
		<li><a href="/surveys/<%= @survey.id() %>/questions/<%= question.id() %>"><%= question.name() %></a></li>
		<% end %>
	</ul>

<% else %>
	<h3>There are no questions on this survey!</h3>
	<% end %>

<br>

  <form action="/surveys/<%= @survey.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Rename the survey:</label>
    <input id="name" name="name" type="text">

    <button type="submit">Update</button>
  </form>

<br>

<form action="/surveys/<%= @survey.id %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Survey</button>
</form>

<div class="container">
	<a href="/">Home</a>
	<a href="/surveys">View All Surveys</a>
	<a href="/surveys/new">Add New Survey</a>
	<a href="/surveys/<%= @survey.id() %>/new">Add New Question</a>
</div>
